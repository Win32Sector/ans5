server {
        listen 80;

        root /var/www/html/{{ vhosts['example1.com'] }};
        index index.html index.htm index.nginx-debian.html;

        server_name {{ vhosts['example1.com'] }};

        location / {
                try_files $uri $uri/ =404;
        }
}